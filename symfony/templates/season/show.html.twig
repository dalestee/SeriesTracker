{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <div class="bg-black">
        <div class="container mx-auto py-8">
            <h1 class="text-4xl text-white font-bold mb-8">Season</h1>

            <div class="flex flex-col md:flex-row">
                <div class="md:w-1/2">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th class="text-white font-bold pr-5">Id:</th>
                                <td class="text-white font-bold">{{ season.id }}</td>
                            </tr>
                            <tr>
                                <th class="text-white font-bold pr-5">Number:</th>
                                <td class="text-white font-bold">{{ season.number }}</td>
                            </tr>
                            <tr>
                                <th class="text-white font-bold pr-5">Episodes:</th>
                                <td>
                                    {% for episode in season.episodes %}
                                        <span class="text-white px-4 py-2 ml-2">{{ episode.number }}</span>
                                    {% endfor %}
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_season_index') }}" class="text-white px-4 py-2 hover:text-red-500">back to list</a>
                </div>

                <div class="md:w-1/2">
                    {{ include('season/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
