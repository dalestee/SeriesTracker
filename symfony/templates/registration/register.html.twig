{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="w-full h-screen flex align-center justify-center items-center bg-black">
    <div class=" bg-white p-10 rounded-lg shadow-lg h-auto w-1/3">
    <h1 class="text-black text-center text-3xl mb-8">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': ' formulaire_register flex flex-col justify-center items-center'}}) }}
        {{ form_row(registrationForm.name, { 'label':'Nom : ' ,'attr': {'class': 'bg-gray-800 w-full rounded-full text-white p-4 my-4 mx-2'} }) }}
        {{ form_row(registrationForm.email, { 'label':'Email : ' ,'attr': {'class': 'bg-gray-800 w-full rounded-full text-white p-4 my-4 mx-2'} }) }}
        {{ form_row(registrationForm.plainPassword, {
            'label': 'Mot de passe : ',
            'attr': {'class': 'bg-gray-800 w-full rounded-full text-white p-4 my-4 mx-2'}
        }) }}
        {{ form_row(registrationForm.agreeTerms, {'label':'Accepter les termes : ' , 'attr': {'class': 'text-white'} }) }}

        <button type="submit" class="btn bg-red-500 text-white p-2 border-2 rounded-full focus:outline-none focus:border-red-700 p-3 mt-8">Inscription</button>
    {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
